#!/bin/bash
###############################################################
#  Do not edit. Managed by Puppet. Changes will be wiped out! # 
###############################################################

function make_and_install {
    ssh jensen@mc-butter.se /home/jensen/bin/remote_make_makeinstall
    echo
    echo "Press Enter to continue..."
    read
    clear    
}

function html2jensen {
    echo "Secure copy of all HTML files...to mc-butter.se!"
    scp /home/bekr/openjensen/html/*.html jensen@mc-butter.se:/home/jensen/openjensen/html/.
    echo
    echo "Press Enter to continue..."
    read
    clear    
}

function js2jensen {
    echo "Secure copy of all JS files...to mc-butter!"
    scp /home/bekr/openjensen/html/*.js jensen@mc-butter.se:/home/jensen/openjensen/html/.
    echo
    echo "Press Enter to continue..."
    read
    clear    
}

function png2jensen {
    echo "Secure copy of all PNG files...to mc-butter!"
    scp /home/bekr/openjensen/html/*.png jensen@mc-butter.se:/home/jensen/openjensen/html/.
    echo
    echo "Press Enter to continue..."
    read
    clear    
}

function lib2jensen {
    echo "Secure copy of all Library Cobol files...to mc-butter!"
    scp /home/bekr/openjensen/lib/*.cbl jensen@mc-butter.se:/home/jensen/openjensen/lib/.
    echo
    echo "Press Enter to continue..."
    read
    clear    
}

function src2jensen {
    echo "Secure copy of all source Cobol files...to mc-butter!"
    scp /home/bekr/openjensen/src/*.cbl jensen@mc-butter.se:/home/jensen/openjensen/src/.
    echo
    echo "Press Enter to continue..."
    read
    clear    
}

function cpy2jensen {
    echo "Secure copy of all Copybooks...to mc-butter!"
    scp /home/bekr/openjensen/copy/*.cpy jensen@mc-butter.se:/home/jensen/openjensen/copy/.
    echo
    echo "Press Enter to continue..."
    read
    clear    
}

function wui-api-names {
    echo "Show all wui-html forms backend API names (requires perl WWW::Mechanize)"
    echo "------------------------------------------------------------------------"
    backend-api
    echo
    echo "Press Enter to continue..."
    read
    clear
}


function menu {
    echo
    echo
    echo -e "\t\t\tOpen Jensen Developers Tools Menu"
    echo -e "\t\t\t---------------------------------" 
    echo -e "\t0 - Recompile/move all files to public web-server directory"
    echo
    echo -e "\t1 - Replace Cobol source files in remote source directory"
    echo
    echo -e "\t2 - Replace HTML files in remote source directory"
    echo -e "\t3 - Replace JS files in remote source directory"    
    echo -e "\t4 - Replace PNG files in remote source directory"
    echo
    echo -e "\t5 - Replace Cobol library source files in remote source directory"
    echo
    echo -e "\t6 - Replace Copybooks files in remote source directory"
    echo
    echo -e "\t7 - Dump backend API names usen in POSTs (from wui-*.html files)"
    echo        
    echo -e "\t9 - Exit program"
}

clear
while [ 1 ]
do
    menu
    echo
    echo -e "\t[Select an option from the menu]"
    read option
    case $option in
    
        0)
            make_and_install
            ;;
            
        1)
            src2jensen
            ;;
            
        2)
            html2jensen
            ;;    
        
        3)
            js2jensen
            ;;
        
        4)
            png2jensen
            ;;
        
        5)
            lib2jensen
            ;;
        
        6)
            cpy2jensen
            ;;  
        
        7)
            wui-api-names
            ;;          
        
        9)
            break
            echo
            ;;
        
    esac
    
done
clear

